<Window x:Class="Audibly.BookmarkEditWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Audibly"
		Background="Transparent"
		mc:Ignorable="d"
		     xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" ResizeMode="NoResize" WindowStyle="None" Height="450" Width="800" WindowStartupLocation="CenterScreen">
	<StackPanel Margin="20" Orientation="Vertical">
		<StackPanel Margin="10" Orientation="Vertical">
			<TextBlock Foreground="BlueViolet" FontSize="25" Margin="0,0,0,10" Text="Enter the descrption below: "></TextBlock>
			<RichTextBox BorderBrush="BlueViolet" BorderThickness="1"  Margin="2,10,2,5" Foreground="White" x:Name="txtDescBM" Height="250"></RichTextBox>
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<ui:Button Appearance="Primary" FontSize="18" Height="50" Width="100" Click="btnSave_Click" Margin="5" x:Name="btnSave" Content="Save"></ui:Button>
			<ui:Button Appearance="Secondary" FontSize="18" Height="50" Width="100" Click="btnCancel_Click" Margin="5" x:Name="btnCancel" Content="Cancel"></ui:Button>
		</StackPanel>
	</StackPanel>
</Window>
