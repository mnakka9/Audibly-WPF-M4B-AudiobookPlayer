<ui:UiWindow x:Class="Audibly.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Audibly"
             mc:Ignorable="d" 
             Height="176"
		     Width="386" 
			 Background="Transparent"
		     WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False"
		     xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
	<StackPanel Margin="20" Orientation="Vertical">
		<TextBlock Foreground="BlueViolet" Height="50" Margin="0,20,0,20" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" x:Name="textMessage"></TextBlock>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
			<ui:Button Appearance="Primary" Margin="25,0,45,0" x:Name="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Content="Ok" Click="Button_Click"></ui:Button>
			<ui:Button Appearance="Secondary" x:Name="Cancel" Width="120" Content="Cancel" Click="Cancel_Click"></ui:Button>
		</StackPanel>
	</StackPanel>

</ui:UiWindow>
