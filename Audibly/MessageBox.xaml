<Window x:Class="Audibly.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Audibly"
             mc:Ignorable="d" 
             Height="219" Width="386" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border Background="#272537" CornerRadius="20">
        <StackPanel Margin="20" Orientation="Vertical">
            <TextBlock Height="50" Margin="0,20,0,20" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" x:Name="textMessage"></TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
                <Button Background="#007bff" Foreground="White" Margin="25,0,45,0" x:Name="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Content="Ok" Click="Button_Click"></Button>
                <Button Background="Gray" Foreground="White" x:Name="Cancel" Width="120" Content="Cancel" Click="Cancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Border>
    
</Window>
